# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/inventory_management"

# JWT Configuration
JWT_SECRET="your-super-secure-jwt-secret-key-here"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=5000
NODE_ENV=development

# Email Configuration (using Gmail SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM="Inventory Management System <noreply@inventory.com>"

# Or use SendGrid (alternative)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@inventory.com

# Notification Settings
LOW_STOCK_CHECK_INTERVAL=300000  # 5 minutes in milliseconds
EMAIL_ENABLED=true
NOTIFICATION_BATCH_SIZE=50

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Redis Configuration (for session storage if needed)
REDIS_URL=redis://localhost:6379